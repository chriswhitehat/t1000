#######################
# OpenCanary SMB
#######################

destination d_smb { file("<%= node[:t1000][:smb][:syslog_path] %>"); };

filter f_smb { facility(<%= node[:t1000][:smb][:syslog_facility] %>); };

log { source(s_sys);
	  filter(f_smb);
      destination(d_smb);
      flags(final); };
